---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Button from '../components/button';
import AppBar from '../components/appBar';
// @ts-ignore
import { Icon } from 'astro-icon';

const hoverBorderStyle = 'outline outline-white hover:outline rounded-sm outline-offset-2';
const thinTextStyle = 'text-white text-sm inline-block font-thin';
const thickTextStyle = 'text-white text-sm font-bold inline-block';
---

<Layout title="Welcome to Astro.">
	<main class="bg-[#e3e6e6] min-h-[1000px]">
		<!-- Appbar -->
		<div
			class="bg-[#131921] w-screen h-16 flex flex-row items-center gap-2 justify-center p-auto object-cover px-2"
		>
			<!-- lOGO -->
			<div class={'w-32 h-10 object-fit' + hoverBorderStyle}>
				<img
					class="translate-y-[-30%]"
					src="https://www.pentalic.com/wp-content/uploads/2018/12/Amazon-logo-white-small.png"
				/>
			</div>
			<!-- delivery text -->
			<div class={'flex flex-col flex-nowrap' + hoverBorderStyle}>
				<p class={thinTextStyle}>Delivery to</p>
				<p class={thickTextStyle}>Denmark</p>
			</div>

			<!-- searchBox -->

			<div class="flex-grow bg-white h-11 rounded mx-2 flex-row flex outline-[#ff9900] outline-4 peer-focus:outline">
				<div
					class="bg-gray-200 flex flex-row items-center h-full w-fit rounded rounded-r-none pl-2 border border-r-gray-300"
				>
					<p class="text-sm text-gray-700">Alle</p>
					<Icon name="mdi:menu-down" class="w-5 text-gray-800" />
				</div>
				<input type="text" class="h-full flex-grow bg-emerald-200 outline-none pl-2 peer" placeholder="Search for items" />
				<div class="bg-[#febd68] h-full w-fit rounded rounded-l-none place-content-center grid px-2">
					<Icon name="mdi:magnify" class="w-9" />
				</div>
			</div>

			<!-- country box -->
			<div class={'w-fit flex flex-row items-center' + hoverBorderStyle}>
				<img
					class="w-6 mr-2"
					src="https://www.iconarchive.com/download/i109119/wikipedia/flags/DK-Denmark-Flag.1024.png"
				/>
				<p class="font-bold text-md text-white">DK</p>
				<Icon
					name="mdi:menu-down"
					class="text-white w-5 self-end justify-center"
					client:load
				/>
			</div>
			<!-- anmelding -->
			<div class={'w-fit flex flex-row items-center' + hoverBorderStyle}>
				<div class="flex flex-col">
					<p class={thinTextStyle}>View your</p>
					<p class={thickTextStyle}>Account</p>
				</div>
				<Icon
					name="mdi:menu-down"
					class="text-white w-5 self-end justify-center inline-block"
				/>
			</div>

			<!-- shopping cart -->
			<div
				class={'w-40 flex flex-row items-end justify-center' +
					hoverBorderStyle}
			>
				<Icon name="mdi:cart-outline" class="text-white w-10" />
				<p class={thickTextStyle + 'mb-3'}>Shopping Cart</p>
			</div>
		</div>
	</main>
</Layout>
